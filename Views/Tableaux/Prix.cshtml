@model IEnumerable<Peintur.Models.TableauPrix>

@{
    ViewBag.Title = "Liste des prix";
}

<h2>
    @ViewBag.Title (<span id="count">@Model.Count()</span>)
</h2>

@Html.Partial("_Filter")

<div class="table-responsive-sm">
    <table class="table table-hover">

        <thead>
            <tr>
                <th scope="col" class="w-half" data-sort="string-ins">
                    @Html.DisplayNameFor(model => model.Nom)
                </th>
                <th scope="col" class="d-sm-none" data-sort="int">
                    @Html.DisplayNameFor(model => model.Prix)
                </th>
                <th scope="col" data-sort="string-ins">
                    @Html.DisplayNameFor(model => model.Technique)
                </th>
                <th scope="col" data-sort="string-ins">
                    @Html.DisplayNameFor(model => model.Taille)
                </th>
                <th scope="col" class="d-none d-sm-table-cell" data-sort="string-ins">
                    @Html.DisplayNameFor(model => model.Cadre)
                </th>
                <th scope="col" class="d-none d-sm-table-cell" data-sort="int">
                    @Html.DisplayNameFor(model => model.Prix)
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="w-half">
                        @Html.ActionLink(item.Nom, "Details", new { id = item.Tableau_ID })
                    </td>
                    <td class="d-sm-none">
                        @Html.DisplayFor(modelItem => item.Prix)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Technique)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Taille)
                    </td>
                    <td class="d-none d-sm-table-cell">
                        @Html.DisplayFor(modelItem => item.Cadre)
                    </td>
                    <td class="d-none d-sm-table-cell">
                        @Html.DisplayFor(modelItem => item.Prix)
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

@section JavaScript
{
    @Html.Partial("_TableScripts")
}
