@model IEnumerable<Peintur.Models.TableauIndex>

@{
    ViewBag.Title = "Liste des tableaux";
}

<h2>
    @ViewBag.Title (<span id="count">@Model.Count()</span>)
</h2>

@Html.Partial("_Filter")

<div class="table-responsive-sm">
    <table class="table table-hover">

        <thead>
            <tr>
                <th class="d-print-none d-none d-sm-table-cell" data-sort="int">
                    Id
                </th>
                <th scope="col" class="w-half" data-sort="string-ins">
                    @Html.DisplayNameFor(model => model.Nom)
                </th>
                <th scope="col" class="d-none d-sm-table-cell" data-sort="string-ins">
                    @Html.DisplayNameFor(model => model.Annee)
                </th>
                <th scope="col" data-sort="string-ins">
                    @Html.DisplayNameFor(model => model.Technique)
                </th>
                <th scope="col" class="d-none d-sm-table-cell" data-sort="string-ins">
                    @Html.DisplayNameFor(model => model.Sujet)
                </th>
                <th class="d-print-none">
                    @Html.ActionLink("Ajouter", "Create", null, new { @class = "btn btn-sm btn-success" })
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="d-print-none d-none d-sm-table-cell">
                        <span class="text-secondary font-xx-small">@Html.DisplayFor(modelItem => item.Tableau_ID)</span>
                    </td>
                    <td class="w-half">
                        @Html.ActionLink(item.Nom, "Details", new { id = item.Tableau_ID })
                    </td>
                    <td class="d-none d-sm-table-cell">
                        @Html.DisplayFor(modelItem => item.Annee)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Technique)
                    </td>
                    <td class="d-none d-sm-table-cell">
                        @Html.DisplayFor(modelItem => item.Sujet)
                    </td>
                    <td class="d-print-none">
                        @Html.ActionLink("Modifier", "Edit", new { id = item.Tableau_ID }, new { @class = "btn btn-sm btn-warning" })
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

@section JavaScript
{
    @Html.Partial("_TableScripts")
}
