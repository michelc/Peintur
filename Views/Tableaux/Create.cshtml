@model Peintur.Models.Tableau

@{
    ViewBag.Title = "Ajouter un nouveau tableau";
}

<h2>
    @ViewBag.Title
</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.Partial("_Editor", Model)

        <div class="form-group row">
            <div class="col-md-10 offset-2">
                <input type="submit" value="Ajouter" class="btn btn-default btn-success" />
                @Html.ActionLink("Annuler", "Index", null, new { @class = "btn btn-outline-dark" })
            </div>
        </div>
    </div>
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.bootstrap4.js"></script>
