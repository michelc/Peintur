@model Peintur.Models.ParametreModel

@{
    ViewBag.Title = "Ajouter un·e " + Model.Type;
}

<h2>
    @ViewBag.Title
</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.Partial("/Views/Parametres/_Editor.cshtml", Model)

        <div class="form-group row">
            <div class="col-md-10 offset-2">
                <input type="submit" value="Ajouter" class="btn btn-default btn-success" />
                @Html.ActionLink("Annuler", "Index", null, new { @class = "btn btn-outline-dark cancel" })
            </div>
        </div>
    </div>
}

@section JavaScript
{
    @Html.Partial("Azerty")
}
