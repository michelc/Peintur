@model Peintur.Models.ParametreModel

@Html.HiddenFor(model => model.ID)

<div class="form-group row">
    @Html.LabelFor(model => model.Nom, htmlAttributes: new { @class = "control-label col-md-2" })
    @Html.EditorFor(model => model.Nom, new { htmlAttributes = new { @class = "form-control col-md-3" } })
    @Html.ValidationMessageFor(model => model.Nom, "", new { @class = "offset-2" })
</div>

@if (Model.Complement != null)
{
    <div class="form-group row">
        @Html.LabelFor(model => model.Valeur, Model.Complement, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.Valeur, new { htmlAttributes = new { @class = "form-control col-md-2" } })
        @Html.ValidationMessageFor(model => model.Valeur, "", new { @class = "offset-2" })
    </div>
}
